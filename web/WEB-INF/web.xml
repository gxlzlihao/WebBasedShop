<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>OnlineShopDatabase</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>Shop</servlet-name>
        <servlet-class>servlets.ShopServlet</servlet-class>
        <init-param>
            <param-name>WELCOME_PAGE</param-name>
            <param-value>/index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>BYE_PAGE</param-name>
            <param-value>/bye.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>THANKYOU_PAGE</param-name>
            <param-value>/thankyou.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>NEWUSER_PAGE</param-name>
            <param-value>/newuser.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>JDBC_URL</param-name>
            <param-value>jdbc:mysql://localhost/lihao_data?user=lihao&amp;password=lihao</param-value>
        </init-param>
        <init-param>
            <param-name>DETAIL_PAGE</param-name>
            <param-value>/detail.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>DISPLAY_PAGE</param-name>
            <param-value>/display.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>LOGIN_PAGE</param-name>
            <param-value>/login.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>PROFILE_PAGE</param-name>
            <param-value>/profile.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>CHECKOUT_PAGE</param-name>
            <param-value>/checkout.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>REDIRECT_CHECKOUT_PAGE</param-name>
            <param-value>checkout.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shop</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>servlets.AdminServlet</servlet-class>
        <init-param>
            <param-name>ITEM_DELETE_PAGE</param-name>
            <param-value>/delete_item_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>NEW_ITEM_ADMIN_PAGE</param-name>
            <param-value>/newitem_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>PRODUCT_INFO_ADMIN_PAGE</param-name>
            <param-value>/productInfo_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>DISPLAY_ADMIN_PAGE</param-name>
            <param-value>/display_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>REDIRECT_ADMIN_PAGE</param-name>
            <param-value>delete_item_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>NEW_PRODUCT_ADMIN_PAGE</param-name>
            <param-value>/product_profile_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>JDBC_URL</param-name>
            <param-value>jdbc:mysql://localhost/lihao_data?user=lihao&amp;password=lihao</param-value>
        </init-param>
        <init-param>
            <param-name>LOGIN_ADMIN_PAGE</param-name>
            <param-value>/login_admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>ORDERS_ADMIN_PAGE</param-name>
            <param-value>/orders_admin.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>TheShop</web-resource-name>
            <url-pattern>/checkout.jsp</url-pattern>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
        
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
            <form-login-config>
                <form-login-page>/login.jsp</form-login-page>
                <form-error-page>/login_error.jsp</form-error-page>
            </form-login-config>
    </login-config>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    
</web-app>
